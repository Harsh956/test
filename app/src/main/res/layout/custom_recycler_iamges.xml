        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_view"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/text_design"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="View All"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp">

                </TextView>

                <TextView
                    android:id="@+id/tv_South_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginRight="60dp"
                    android:layout_toLeftOf="@id/tv_view"
                    android:gravity="top"
                    android:text="shdhajashdja"
                    android:textColor="#000"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/tv_South_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_South_name"
                    android:layout_marginRight="58dp"
                    android:layout_toLeftOf="@id/tv_view"
                    android:text="hsadjadahjdahkjd"
                    android:textColor="#C0C0C0"
                    android:textSize="14sp">

                </TextView>


                <android.support.v7.widget.RecyclerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/child_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_South_about"
                    android:columnWidth="70dp"
                    android:horizontalSpacing="5dp"
                    android:nestedScrollingEnabled="false"
                    android:numColumns="3"
                    android:padding="5dp" />


            </RelativeLayout>


        </LinearLayout>




</RelativeLayout>