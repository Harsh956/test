<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/collection_tv_view"
                android:gravity="top"
                android:layout_margin="5dp"
                android:text="name"
                android:textColor="#000"
                android:textSize="16sp">

            </TextView>
            <TextView
                android:id="@+id/event_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/collection_tv_view"
                android:layout_below="@id/event_name"
                android:layout_margin="5dp"

                android:text="about"
                android:textColor="#000"
                android:textSize="16sp">

            </TextView>
            <TextView
                android:id="@+id/collection_tv_view"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/text_design"
                android:gravity="center"
                android:padding="2dp"
                android:text="View All"
                android:textColor="#FFFFFF"
                android:textSize="12sp">

            </TextView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/collection_recycler_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/event_about">

            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>




</LinearLayout>